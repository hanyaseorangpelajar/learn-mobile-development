<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            tools:context=".MainActivity"
            tools:ignore="MissingConstraints"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                tools:context=".MainActivity"
                tools:ignore="MissingConstraints"
                android:background="@color/black">

                <RelativeLayout
                    android:layout_width="342dp"
                    android:layout_height="194dp"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="194dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/the_art_of_war">
                    </ImageView>
                    <TextView
                        android:layout_width="198dp"
                        android:layout_height="108dp"
                        android:layout_marginLeft="168dp"
                        android:layout_marginTop="32dp"
                        android:text="The Art Of War: Original Classic Edition"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="168dp"
                        android:layout_marginTop="148dp"
                        android:text="Sun Tzu"
                        android:textSize="16dp"
                        android:fontFamily="monospace"
                        android:alpha="0.5"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="342dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:paddingLeft="32dp"
                    android:background="@drawable/rounded_background"
                    android:paddingTop="6dp"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/vector_star"
                        >
                    </ImageView>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="85.5dp"
                        android:src="@drawable/vector_globe">
                    </ImageView>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="171dp"
                        android:src="@drawable/vector_book">
                    </ImageView>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="256.5dp"
                        android:src="@drawable/vector_calendar">
                    </ImageView>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Rating"
                        android:textAlignment="center"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="80.5dp"
                        android:layout_marginTop="20dp"
                        android:text="Language"
                        android:textAlignment="center"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="171dp"
                        android:layout_marginTop="20dp"
                        android:text="Pages"
                        android:textAlignment="center"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="256.5dp"
                        android:layout_marginTop="20dp"
                        android:text="Year"
                        android:textAlignment="center"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="30dp"
                        android:text="5.0"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="80.5dp"
                        android:layout_marginTop="30dp"
                        android:text="English"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="171dp"
                        android:layout_marginTop="30dp"
                        android:text="86"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="256.5dp"
                        android:layout_marginTop="30dp"
                        android:text="2019"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="6dp"
                        tools:ignore="TextSizeCheck"></TextView>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="342dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="32dp"
                    >

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:text="FREE SAMPLE"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"></Button>

                    <Button
                        android:layout_width="171dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="171dp"
                        android:textColor="@color/white"
                        android:text="BUY $9.29"
                        android:textAlignment="center"
                        android:textStyle="bold"></Button>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="342dp"
                    android:layout_height="194dp"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:text="About This Book"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>

                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="144dp"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/white"
                        android:text="This Chinese treatise on war was written by Sun Tzu in the 6th century B.C. Each one of the 13 chapters is devoted to a different aspect of warfare, making it the definitive work on military strategies and tactics of its time. Studied by generals from Napoleon to Rommel, it is still one of the most influential works on the subject and is required reading in most military academies around the world."
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="342dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:text="Ratings and Reviews"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>

                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:text="5.0"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>
                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="80dp"
                        android:fontFamily="monospace"
                        android:text="183 Ratings"
                        android:textColor="@color/white"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:background="@drawable/rounded_background"
                        android:layout_width="125dp"
                        android:layout_height="18dp"
                        android:textAlignment="center"
                        android:layout_marginTop="125dp"
                        android:fontFamily="monospace"
                        android:text="Adri"
                        android:textColor="@color/black"></TextView>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="135dp"
                        android:src="@drawable/five_stars"></ImageView>
                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="170dp"
                        android:fontFamily="monospace"
                        android:text="Great Book !!!, Highly Recomended it. My favorite qoute is Know thy self, know thy enemy. A thousand battles, a thousand victories. Victorious warriors win first and then go to war, while defeated warriors go to war first and then seek to win."
                        android:textColor="@color/white"></TextView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>